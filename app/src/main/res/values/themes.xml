<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImcApp20" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item> -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_login" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_700</item>
        <item name="android:padding">8dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
    
    <style name="dashboard_values" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboard_labels" parent="dashboard_values">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>